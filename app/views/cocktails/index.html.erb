<div class= "wrapper"> <h2 style="text-align: center;">Create, Shake & Taste</h2>
  <p>Make fabulous cocktails</p>
</div>


<div class="container">
  <table>
   <tbody>
     <% @cocktails.each do |cocktail| %>
     <tr>
       <td><%= cocktail.name %></td>
       <td><%= cocktail.ingredients.count %> ingredients</td>
       <td><%= link_to 'Show', cocktail, class: "btn btn-medium" %></td>
       <td><%= link_to 'Edit', edit_cocktail_path(cocktail), class: "btn btn-medium" %></td>
       <td><%= link_to 'Delete', cocktail, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-medium" %></td>
     </tr>
     <% end %>
   </tbody>
 </table>
</div>

