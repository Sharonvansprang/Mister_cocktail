<h1>Cocktails#show</h1>
<p>Find me in app/views/cocktails/show.html.erb</p>

<%= link_to 'Add ingredient',new_cocktail_dose_path(@cocktail) %>


<h2><%= @cocktail.name %></h2>
<% @cocktail.doses.each do |dose| %>
  <%= dose.description %> : <%= dose.ingredient.name %>
  <%= link_to 'Delete ingredient', cocktail_dose_path(@cocktail,dose.id), method: :delete, data: { confirm: 'Are you sure?' } %>
<% end %>

<%= link_to 'Edit', edit_cocktail_path(@cocktail), class: "btn btn-primary" %>
<%= link_to 'Back', cocktails_path, class: "btn btn-default" %>


